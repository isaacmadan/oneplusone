<div class="container">
	<h3>Update organization</h3>
	<%= form_for @organization, :url => organization_path do |f| %>
		<div class="form-group">
			<%= f.label :name, "Name" %>
			<%= f.text_field :name, :class => "form-control" %>
		</div>

		<div class="form-group">
			<%= f.submit "Update", :class => "btn btn-default" %>
		</div>
	<% end %>
</div>